<%= form_for @company do |f| %>
  <div class='form-field'>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
<div class='form-field'>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</div>
<div class='form-field'>
  <%= f.submit :class => 'btn btn primary' %>
</div>
<% end %>
